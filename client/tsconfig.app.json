{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    "moduleResolution": "bundler",
    "jsx": "react-jsx",           // ← مهم
    "types": ["react"],           // ← برای JSX namespace

    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
